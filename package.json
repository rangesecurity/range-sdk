    "@types/amqplib": "^0.10.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "mocha": "^10.2.0",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@cosmjs/stargate": "^0.31.0",
    "@cosmjs/tendermint-rpc": "^0.31.0",
    "amqplib": "^0.10.3",
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4",
    "osmojs": "^15.2.1",
    "zod": "^3.21.4"
  }
}
